<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="52.6dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="52.3dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <tenthousand.hour.law.outliers.utils.StyledTextView
            android:id="@+id/itemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16.6sp"
            app:font="@string/roboto_light"
            android:layout_marginStart="17.3dp"
            android:layout_marginTop="20.7dp"
            android:background="@color/blue"/>
        <tenthousand.hour.law.outliers.utils.StyledTextView
            android:layout_marginStart="77.3dp"
            android:layout_marginEnd="68.3dp"
            android:layout_marginTop="17.7dp"
            android:id="@+id/itemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:font="@string/roboto_regular"
            />
        <tenthousand.hour.law.outliers.utils.StyledTextView
            android:id="@+id/itemPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16.6sp"
            app:font="@string/roboto_light"
            android:layout_marginTop="20.7dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

</LinearLayout>